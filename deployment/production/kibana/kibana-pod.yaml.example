apiVersion: v1
kind: Pod
metadata:
  labels:
    app: kibana-pod
  name: kibana-pod
  annotations:
    seccomp.security.alpha.kubernetes.io/pod: localhost/default.json
spec:
  restartPolicy: OnFailure
  hostNetwork: true
  containers:
  - name: srv01
    image: localhost/extra2000/elastic/kibana
    securityContext:
      allowPrivilegeEscalation: false
      privileged: false
      capabilities:
        add: []
        drop:
        - CAP_MKNOD
        - CAP_NET_RAW
        - CAP_AUDIT_WRITE
      seLinuxOptions:
        type: kibana_podman.process
    resources:
      requests:
        memory: 1000Mi
        cpu: 1000m
      limits:
        memory: 1000Mi
        cpu: 1000m
    env:
    - name: NODE_OPTIONS
      valueFrom:
        configMapKeyRef:
          name: kibana-configmap
          key: node_options
    volumeMounts:
    - mountPath: /usr/share/kibana/config/kibana.yml
      name: kibana-yml
      readOnly: true
    - mountPath: /usr/share/kibana/config/elastic-ca.pem
      name: kibana-ssl-ca
      readOnly: true
    - mountPath: /usr/share/kibana/config/kibana.p12
      name: kibana-ssl-http
      readOnly: true
    - mountPath: /usr/share/kibana/config/kibana.keystore
      name: kibana-keystore
      readOnly: true
  volumes:
  - name: kibana-yml
    hostPath:
      path: ./configs/kibana.yml
  - name: kibana-ssl-ca
    hostPath:
      path: ./secrets/elastic-ca.pem
  - name: kibana-ssl-http
    hostPath:
      path: ./secrets/certificate-bundle/kibana/kibana.p12
  - name: kibana-keystore
    hostPath:
      path: ./secrets/kibana.keystore
